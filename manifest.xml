<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="TaskPaneApp">

  <!-- מזהה ייחודי לתוסף -->
  <Id>a1b2c3d4-1234-5678-9abc-123456789def</Id>
  
  <!-- גרסה -->
  <Version>1.0.0.0</Version>
  
  <!-- פרטי היוצר -->
  <ProviderName>זיהוי מקורות ספריא</ProviderName>
  
  <!-- שפה -->
  <DefaultLocale>he-IL</DefaultLocale>
  
  <!-- שם התוסף -->
  <DisplayName DefaultValue="מקורות ספריא" />
  
  <!-- תיאור -->
  <Description DefaultValue="תוסף לזיהוי מקורות יהודיים באמצעות ספריא" />
  
  <!-- אייקונים (אופציונלי) -->
  <IconUrl DefaultValue="https://raw.githubusercontent.com/yourusername/word-sefaria/main/icon.png" />
  
  <!-- איפה התוסף עובד -->
  <Hosts>
    <Host Name="Document" />
  </Hosts>
  
  <!-- דרישות מינימליות -->
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.1" />
    </Sets>
  </Requirements>
  
  <!-- הרשאות -->
  <Permissions>ReadWriteDocument</Permissions>
  
  <!-- איפה הקוד נמצא - **שנה את זה לכתובת שלך!** -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://github.com/Daviddov/word_ex/index.html" />
  </DefaultSettings>
  
</OfficeApp>